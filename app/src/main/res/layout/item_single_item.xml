<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89.0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_item_picture"
            android:layout_width="88.0dp"
            android:layout_height="89.0dp"
            android:background="@color/manatee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/outerspace"
                android:textSize="18.0sp"
                tools:text="Half arabic lamb" />

            <TextView
                android:id="@+id/tv_item_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/manatee"
                android:textSize="16.0sp"
                tools:text="13-14 KG" />

            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textColor="@color/firebrick"
                android:textSize="18.0sp"
                tools:text="43 AED" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.97dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:background="@color/lavendergray" />

</LinearLayout>